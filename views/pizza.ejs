<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/productstyle.css">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>
    <%- include ('./partials/navbar.ejs') %>

        //this the image on top page
        <div class="innerBody">
            <div class="BrandDescription" id="PizzaHeading">
                <h1 style="color: rgb(255, 255, 255);"> Treat Yourself with the Best Pizza in Town!</h1>
              
            </div>
        </div>

        <!----------------------------------BURGER SECTION------------------------->

        <div class="Section1">
            <div class="text-center my-3 burgerOuterdiv">
                <!-- Best Selling Heading -->
                <p class="bestSelling ">Pizza's</p>
            </div>
            <div class="mx-3 bur">
                <div class="row row-cols-2 row-cols-md-4 g-4">
                    <!-- Loop through burgers -->
                    <% burgers.forEach(burger=> { %>
                        <div class="col">
                            <div class="burger1 px-2 py-3">
                                <img src="<%= burger.image %>" alt="<%= burger.name %>" class="img-fluid mb-3">
                                <p class="name1">
                                    <%= burger.name %>
                                </p>
                                <p class="explain1">
                                    <%= burger.description %>
                                </p>
                                <p class="price1">
                                    <%= burger.price %> /-
                                </p>
                                <button class="add">Add</button>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>

        <script src="../js/product.js"></script>
</body>

</html>